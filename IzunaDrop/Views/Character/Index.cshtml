@model IEnumerable<IzunaDrop.Data.Models.Character>;
@{
}
<ul>

    @if (Model.Count() == 0)
    {
        <div>
            No characters yet
        </div>
    }
    else
    {
        @foreach (var character in Model)
        {
            <div>
                <a asp-controller="Character" asp-action="Details" asp-route-gameId="@character.GameId" asp-route-characterId="@character.Id">
                    @character.Name
                </a>

               
            </div>
        }
    }
</ul>
