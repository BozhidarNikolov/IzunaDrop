@{
}
@model IEnumerable<IzunaDrop.Data.Models.Item>

<ul>

    @if (!Model.Any())
    {
        <div>
            No items yet
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div>
                <a asp-controller="Item" asp-action="Details" asp-route-gameId="@item.GameId" asp-route-itemId="@item.Id">
                    @item.Name
                </a>
            </div>
        }
    }
</ul>
